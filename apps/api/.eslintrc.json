{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*", "**/*/src/generated", "**/node_modules"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "parserOptions": {
        "project": ["apps/api/tsconfig.*?.json"]
      },
      "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "no-console": "off"
      }
    }
  ],
  "rules": {
    "curly": "error"
  }
}
