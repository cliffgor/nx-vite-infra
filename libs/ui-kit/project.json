{
  "name": "ui-kit",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui-kit/src",
  "projectType": "library",
  "targets": {
    "storybook": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": ["cd libs/ui-kit && npm run storybook"]
      }
    },
    "build-storybook": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "libs/ui-kit",
        "commands": [
          "npm run build-storybook"
        ]
      }
    },
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": ["dist/libs/storybook/"],
      "options": {
        "commands": [
          "cp -r libs/ui-kit/storybook-static/** dist/libs/storybook/"
        ],
        "parallel": false
      },
      "dependsOn": [
        {
          "target": "build-storybook",
          "projects": "self"
        },
        {
          "target": "build",
          "projects": "dependencies"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/ui-kit/**/*.ts", "libs/ui-kit/**/*.vue"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/ui-kit/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
